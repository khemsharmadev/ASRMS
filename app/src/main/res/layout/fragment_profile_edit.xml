<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileEdit"

    xmlns:android="http://schemas.android.com/apk/res/android">
        <include layout="@layout/nav_header_main"
            android:id="@+id/nav_head"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_head"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.khemsharma.rms.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <EditText
                    android:enabled="false"
                    android:layout_width="180dp"
                    android:id="@+id/nameEt"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.khemsharma.rms.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <EditText

                    android:layout_width="180dp"
                    android:id="@+id/emailEt"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.khemsharma.rms.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enrolment"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <EditText
                    android:enabled="false"

                    android:layout_width="180dp"
                    android:id="@+id/enrolEt"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.khemsharma.rms.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <EditText
                    android:enabled="false"

                    android:layout_width="180dp"
                    android:id="@+id/passEt"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.khemsharma.rms.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <Spinner
                    android:enabled="false"
                    android:clickable="false"
                    android:layout_width="180dp"
                    android:id="@+id/roleSp"
                    android:layout_height="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.khemsharma.rms.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <EditText
                    android:enabled="false"

                    android:layout_width="180dp"
                    android:id="@+id/mobEt"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.khemsharma.rms.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <EditText
                    android:enabled="false"

                    android:layout_width="180dp"
                    android:id="@+id/addrEt"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/profileSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Edit"
            android:layout_gravity="bottom"
            android:background="#2a2a65eb"
            android:layout_alignParentBottom="true"

            />

</RelativeLayout>
